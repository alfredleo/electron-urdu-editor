{
  "name": "urdueditor",
  "version": "1.0.0",
  "description": "Urdu Editor",
  "main": "src/main.js",
  "scripts": {
    "build-mac": "rimraf urdueditor-darwin* && electron-packager . --platform=darwin --arch=x64 --icon=icon",
    "build-linux": "rimraf urdueditor-linux-x64 && electron-packager . --platform=linux --arch=x64 --icon=icon.png",
    "build-win": "rimraf urdueditor-win* && electron-packager . --platform=win32 --arch=x64 --icon=icon",
    "start": "electron ."
  },
  "keywords": [
    "Urdu",
    "Editor"
  ],
  "author": "Nabeel Hasan Naqvi",
  "license": "MIT",
  "devDependencies": {
    "electron-debug": "^1.3.0",
    "electron-packager": "^8.7.2",
    "electron-prebuilt": "^1.4.13",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "jquery": "^3.2.1"
  }
}
